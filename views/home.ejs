<%- include('./partials/header.ejs') %>

<section class="hero-simple text-center">
  <div class="container" data-aos="fade-up">
    <div data-aos="zoom-in" data-aos-delay="200"> 
      <i class="bi bi-journal-richtext hero-icon"></i> 
    </div>
    <h1 class="fw-bold hero-title" data-aos="fade-up" data-aos-delay="300">SmartNote</h1> 
    <p class="lead col-lg-8 mx-auto hero-subtitle" data-aos="fade-up" data-aos-delay="400">
      The straightforward way to capture your thoughts and ideas.
      Clean, simple, and always at your fingertips.
    </p>
    <div data-aos="fade-up" data-aos-delay="500"> 
      <a href="/notes/new" class="btn btn-light btn-lg btn-hero shadow-sm me-2">Create a Note</a>
      <% if (!user) { %>
        <a href="/auth/sign-up" class="btn btn-outline-light btn-lg btn-hero shadow-sm">Sign Up</a>
      <% } else { %>
        <a href="/notes" class="btn btn-outline-light btn-lg btn-hero shadow-sm">My Notes</a>
      <% } %>
    </div>
  </div>
</section>

<section class="section-padding bg-light">
  <div class="container">
    <div class="text-center mb-4" data-aos="fade-up">
      <h2 class="fw-semibold">Why Choose SmartNote?</h2>
    </div>
    <div class="row g-4 text-center">
      <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
        <div class="card card-feature shadow-sm h-100 p-3">
          <i class="bi bi-pencil-square feature-icon-sm"></i>
          <h5 class="fw-medium mt-2">Easy to Use</h5>
          <p class="text-muted small">A clean interface designed for quick note-taking without distractions.</p>
        </div>
      </div>
      <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
        <div class="card card-feature shadow-sm h-100 p-3">
          <i class="bi bi-tags feature-icon-sm"></i>
          <h5 class="fw-medium mt-2">Organize with Tags</h5>
          <p class="text-muted small">Simply tag your notes to find them easily later.</p>
        </div>
      </div>
      <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
        <div class="card card-feature shadow-sm h-100 p-3">
          <i class="bi bi-search feature-icon-sm"></i>
          <h5 class="fw-medium mt-2">Quick Search</h5>
          <p class="text-muted small">Find what you need with a fast and effective search (coming soon!).</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section-padding">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6" data-aos="fade-right">
        <h2 class="fw-semibold mb-3">Focus on Your Notes</h2>
        <p class="text-muted lead mb-3">SmartNote provides a clutter-free environment so you can concentrate on what matters most â€“ your ideas.</p>
        <ul class="list-unstyled text-muted">
          <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Simple note creation</li>
          <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Tag-based organization</li>
          <li><i class="bi bi-check-circle-fill text-success me-2"></i>Clean, readable interface</li>
        </ul>
      </div>
      <div class="col-md-6 text-center" data-aos="fade-left" data-aos-delay="100">
        <img src="/screenshots/ui.png" class="img-fluid rounded shadow-lg" alt="SmartNote App Interface Screenshot">
      </div>
    </div>
  </div>
</section>

<section class="section-padding bg-light">
  <div class="container text-center">
    <div data-aos="zoom-in">
      <h2 class="fw-semibold">Ready to Get Started?</h2>
      <p class="lead text-muted mb-4">Begin organizing your thoughts with SmartNote today.</p>
      <a href="/notes/new" class="btn btn-primary btn-lg px-5 shadow">Start Noting</a>
      <% if (!user) { %>
        <a href="/auth/sign-up" class="btn btn-outline-secondary btn-lg px-5 ms-2 shadow">Sign Up Free</a>
      <% } %>
    </div>
  </div>
</section>

<%- include('./partials/footer.ejs') %>