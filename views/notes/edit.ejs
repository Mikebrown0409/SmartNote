<%- include('../partials/header.ejs') %>

<div class="container-fluid px-0 flex-grow-1 d-flex flex-column note-editor-page">
  <form action="/notes/<%= note._id %>?_method=PUT" method="POST" class="d-flex flex-column flex-grow-1 bg-white shadow-sm">
    
    <div class="note-editor-header p-3 border-bottom">
      <div class="container">
        <div class="row gy-2 gx-3 align-items-center">
          <div class="col-12 col-lg">
            <label for="title" class="visually-hidden">Title</label>
            <input type="text" name="title" id="title" class="form-control form-control-flush fs-4 fw-medium" required placeholder="Untitled Note" value="<%= note.title %>">
          </div>
          <div class="col-auto">
            <label for="tags" class="visually-hidden">Tags</label>
            <input type="text" name="tagInput" id="tags" class="form-control form-control-sm" placeholder="Add tags (comma separated)..." value="<%= note.tags.map(tag => tag.name).join(', ') %>">
          </div>
          <div class="col-auto">
            <a href="/notes/<%= note._id %>" class="btn btn-sm btn-outline-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-sm btn-primary">
              <i class="bi bi-save me-1"></i>Save Changes
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="note-editor-content flex-grow-1 p-3 p-md-4">
        <label for="content" class="visually-hidden">Content</label>
        <textarea name="content" id="content" class="form-control form-control-flush border-0 h-100 w-100" rows="10" required placeholder="Start writing your thoughts here..." style="resize: none; font-size: 1.05rem; line-height: 1.75;"><%= note.content %></textarea>
    </div>

  </form>
</div>

<%- include('../partials/footer.ejs') %>